{
    "manifest_version": 3,
    "name": "RealTalk",
    "version": "1.0",

    "description": "Makes youtube livestream comments more tolerable",
    "homepage_url": "https://github.com/hyperunicorn/RealTalk",
    "icons": {
        "48": "icons/bulma_48px.png"
    },

    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "scripting",
        "tabs",
        "alarms"
    ],
    
    "browser_specific_settings": {
        "gecko": {
            "id" : "realtalk@realtalk.com"
         }
    },



    "background": {
        "scripts" : ["RealTalk.js"]
    },        

    "page_action" : {
        "browser_style" : true,
        "default_icon":{
            "48" : "icons/bulma_48px.png",
            "96" : "icons/bulma_96px.png"
        },
        "show_matches" : ["https://*.youtube.com/*"]
    }
}
